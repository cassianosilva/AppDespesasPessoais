
@{
    ViewBag.Title = "Update";
}

<h3 align="center">Cadastrar Despesa</h3>

<form action="/Home/Update" method="post">
    <div class="form-group">
        <label>Id</label>
        <input class="form-control" type="text" name="IdDespesa" value="@Model.IdDespesa" />
    </div>

    <div class="form-group">
        <label>Local da despesa</label>
        <input class="form-control" type="text" name="LocalDespesa" value="@Model.LocalDespesa" />
    </div>

    <div class="form-group">
        <label>Data da despesa</label>
        <input class="form-control" type="date" name="DataDespesa" value="@Model.DataDespesa" />
    </div>

    <div class="form-group">
        <label>Valor da despesa</label>
        <input class="form-control" type="number" min="0" step="0.01" name="ValorDespesa" value="@Convert.ToInt32(double.Parse(Model.ValorDespesa))" />
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
    </div>
</form>