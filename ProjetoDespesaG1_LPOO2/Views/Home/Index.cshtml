@model IEnumerable<ProjetoDespesaG1_LPOO2.Models.Despesa>
@{
    ViewBag.Title = "Index";
}

<h2 align="center">Despesas pessoais</h2><br />

<div class="container">
    <form class="form-inline" role="form" action="/Home/Pesquisa/Data" method="post" align="right">
        <div class="form-group">
            <label for="focusedInput">Pesquisar por data</label>
            <input class="form-control" style="width:auto" id="focusedInput" type="date" name="Data" value="" />
        </div>
        <div class="form-group">
            <button class="btn glyphicon glyphicon-search" type="submit"></button>
        </div>
    </form>
</div>

<h5 align="center" style="font-weight:bold">Últimos registros</h5>
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>Local</th>
            <th>Data</th>
            <th>Valor (R$)</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.LocalDespesa</td>
            <td>@item.DataDespesa</td>
            <td>@item.ValorDespesa</td>
            <td align="center"><a class="btn btn-danger" href="~/Home/Delete/@item.IdDespesa">Excluir</a></td>
            <td align="center"><a class="btn btn-info" href="~/Home/Update/@item.IdDespesa">Alterar</a></td>
        </tr>
    }
</table>

<button class="btn btn-group-lg">@Html.ActionLink("Adicionar novo", "Create")</button>